<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBinding.DataObject.MainPage">

    <Grid
    Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>


        </Grid.RowDefinitions>



        <VerticalStackLayout
       Margin="24"
       Grid.Row="0"
       Grid.Column="0">

            <Label 
        Text="Click de conteo:"
        FontSize="30" />

            <Border 
        Margin="0,24,0,36"
        Stroke="Black">

                <Label   
         Text="{Binding Path=Conteo}"
         HorizontalOptions="Center" 
         Margin="0,24"       
         FontSize="64"
         FontAttributes="Bold"
    
            </Border>
        </VerticalStackLayout>

        <HorizontalStackLayout 
            Grid.Row="1"
            Grid.Column="0"
        HorizontalOptions="Center" 
        Spacing="32">

            <Button 
            Text="Contar"
            FontSize="Medium"
            Background="AliceBlue"
            WidthRequest="130"
            Clicked="Button_Clicked"/>

            <Button 
            Text="Reiniciar" 
            FontSize="Medium"
            Background="AliceBlue"
            WidthRequest="130"
            Clicked="Button_Clicked_1" />

         
        </HorizontalStackLayout>




    </Grid>

</ContentPage>
