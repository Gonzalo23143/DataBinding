<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBinding.XamlElement.MainPage">

    <Grid
        RowDefinitions="*,*"
        Padding="24">
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            ColumnDefinitions="auto, *"
            ColumnSpacing="8">

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Text="Escriba lo que piense:"
                VerticalOptions="Center">

            </Label>
            <Entry
                Grid.Row="0"
                Grid.Column="1"
                BackgroundColor="LightGray"
                x:Name = "Entrytext"/>

        </Grid>

        <VerticalStackLayout>

            <Button
                Clicked="Button_Clicked">
                
            </Button>

            <Label
                Text="Esto es lo que escribiste:"
                />

            <Label
                Text="Aqui se va a ver lo que escribiste"
                HorizontalOptions="Center"
                FontSize="Small"
                FontAttributes="Italic"
                x:Name="EnteredtextLabel"/>

        </VerticalStackLayout>

    </Grid>

</ContentPage>
